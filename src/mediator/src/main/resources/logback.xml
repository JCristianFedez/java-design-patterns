<configuration>
  <!-- ConfiguraciÃ³n de los niveles de registro -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{HH:mm:ss.SSS}] [%thread] [%-5level] %logger{0} - %msg%n</pattern>
    </encoder>
  </appender>
</configuration>
